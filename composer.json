{
  "name": "unglud/modx-installer",
  "description": "Simple composer installer for MODx CMF with filling all data automagically",
  "version": "0.1.0",
  "type":"project",
  "authors": [
    {
      "name": "Alex Heinz",
      "email": "unglud@gmail.com"
    }
  ],
  "license": "MIT",
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "modxcms/revolution",
        "version": "2.4.2",
        "dist": {
          "url": "https://github.com/modxcms/revolution/archive/v2.4.2-pl.zip",
          "type": "zip"
        },
        "source": {
          "url": "https://github.com/modxcms/revolution.git",
          "type": "git",
          "reference": "2.x"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modxcms/revolution",
        "version": "3.0",
        "source": {
          "url": "https://github.com/modxcms/revolution.git",
          "type": "git",
          "reference": "dev-3.x"
        }
      }
    },
    {
      "type": "path",
      "url": "_scripts/unglud-installer"
    }
  ],
  "require": {
    "unglud/installer":"~1"
  },
  "scripts": {
    "post-install-cmd": [
      "_scripts/build.sh"
    ]
  }
}
